<!DOCTYPE html>
<html lang="en">
  <head>
      <% include ./_header.ejs %>
  </head>
  <body>
    <div class="row">
    <div class="large-4 small-10 large-centered small-centered columns">

    <div class="logobox">
    <a class="logotext" href="/">Toodoo</a>
    </div>

    <div class="form-icons">
      <h4 class="editText">Edit</h4>

    <div class="link">
      <% if (bookLink) { %>
        <p></p><a href='<%= bookLink %>'>More info at Google Books!</a></p>
      <% } %>
    </div>

      <form action="/items/<%= itemId %>?_method=PUT" method="POST">
      <div class="input-group">
        <span class="input-group-label">
        <label>Toodoo</label>
        </span>
        <input type="text" id="content" name="content" value="<%= content %>" class="input-group-field">
      </div>

      <div>
        <select name="categoryId" id="categoryId">
          <option value="1" <%= (categoryId === 1) ? "selected" : "" %> >To Watch</option>
          <option value="2" <%= (categoryId === 2) ? "selected" : "" %> >To Read</option>
          <option value="3" <%= (categoryId === 3) ? "selected" : "" %> >To Eat</option>
          <option value="4" <%= (categoryId === 4) ? "selected" : "" %> >To Buy</option>
          <option value="5" <%= (categoryId === 5) ? "selected" : "" %> >To Sort</option>
        </select>
      </div>
      <button class="button expanded success">Update</button>
      </form>

      <form action="/" method="GET">
        <button class="button expanded alert">Cancel</button>
      </form>
    </div>
    </div>
    </div>



  <!-- Scripts -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/vendor/foundation.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script>$(document).foundation();</script>
  </body>
</html>

